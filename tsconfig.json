{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "types": ["./vue.d.ts"]
  },
  "include": ["packages/**/*.ts", "packages/**/*.vue"],
  "exclude": ["node_modules"]
}
